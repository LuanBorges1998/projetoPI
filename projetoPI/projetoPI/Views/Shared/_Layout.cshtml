<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Meu Aplicativo ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/estilo.css" rel="stylesheet" />
</head>
<body>
    <div class="corpo-do-site ">

        <div class="row">
            <div class="navbar-fixed-top cabecalho">
                <div class="navbar-brand col-xs-6 col-sm-6 col-md-6 col-lg-6">
                    <nav class="navbar-header">Programação</nav>
                </div>
                <div class="col-xs-6 col-sm-6">
                    <button class="navbar-toggle botao" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="glyphicon glyphicon-align-justify "></span>
                    </button>
                </div>
                <div id="navbarNav" class="collapse navbar-collapse navbar-right text-right col-md-6 col-lg-6">
                    <ul class="navbar-nav ">
                        <li class="nav-item"><a>Home</a></li>
                        <li class="nav-item"><a>Ajuda</a></li>
                        <li class="nav-item"><a>Sobre</a></li>
                        @if (Session["logado"] != null)
                        {
                            projetoPI.Models.usuario us = (projetoPI.Models.usuario)Session["logado"];
                            
                            <li class="dropdown usuario-logado">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    @us.nome
                                </button>
                                <div class="dropdown-menu usuario-logado" aria-labelledby="dropdownMenuButton">
                                    @Html.ActionLink("Agenda", "Index", "Agenda", null, new { @class = "links" })<br />
                                    @Html.ActionLink("Sair", "Sair", "Usuario", null, new { @class = "links" })
                                </div>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">@Html.ActionLink("Login", "Index","Usuario")</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        @RenderBody()

        <div class="row">
            <div class="rodape footer navbar-fixed-bottom col-lg-12 col-xs-12 col-sm-12 col-md-12">
                Projeto Integrador 5º Período
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/script.js"></script>
    @RenderSection("scripts", required: false)

    @Scripts.Render("~/bundles/jqueryval")
</body>
</html>
